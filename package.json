{
    "name": "vscode-todo-timer",
    "displayName": "vscode-todo-timer",
    "description": "",
    "version": "0.0.1",
    "publisher": "shushutona",
    "engines": {
        "vscode": "^1.52.0"
    },
    "categories": [
        "Other"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/shushuTona/vscode-todo-timer.git"
    },
    "activationEvents": [
        "onView:todoList"
    ],
    "main": "./out/extension",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "todo-timer",
                    "title": "ToDo-Timer",
                    "icon": "./out/img/icon.svg"
                }
            ]
        },
        "views": {
            "todo-timer": [
                {
                    "id": "todoList",
                    "name": "ToDoList"
                },
                {
                    "id": "complete",
                    "name": "Complete Item"
                }
            ]
        },
        "commands": [
            {
                "command": "todoList.refreshEntry",
                "title": "Refresh",
                "icon": {
                    "light": "./out/img/refresh-icon.svg",
                    "dark": "./out/img/refresh-icon.svg"
                }
            },
            {
                "command": "todoList.addEntry",
                "title": "Add task",
                "icon": {
                    "light": "./out/img/plus-icon.svg",
                    "dark": "./out/img/plus-icon.svg"
                }
            },
            {
                "command": "todoList.editEntry",
                "title": "Edit",
                "icon": {
                    "light": "./out/img/pen-icon.svg",
                    "dark": "./out/img/pen-icon.svg"
                }
            },
            {
                "command": "todoList.deleteEntry",
                "title": "Delete",
                "icon": {
                    "light": "./out/img/cross-icon.svg",
                    "dark": "./out/img/cross-icon.svg"
                }
            }
        ],
        "menus": {
            "view/title": [
                {
                    "command": "todoList.refreshEntry",
                    "when": "view == todoList",
                    "group": "navigation"
                },
                {
                    "command": "todoList.addEntry",
                    "when": "view == todoList",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "todoList.editEntry",
                    "when": "view == todoList && viewItem == dependency",
                    "group": "inline"
                },
                {
                    "command": "todoList.deleteEntry",
                    "when": "view == todoList && viewItem == dependency",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}
